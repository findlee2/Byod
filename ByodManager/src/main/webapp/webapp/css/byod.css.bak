@charset "UTF-8";

#byod-wrap {width:100%;min-width:1280px;height:100%;}
#header {position:relative;width:100%;padding:15px 15px 12px 15px;}
#header > div {position:absolute;top:18px;right:15px;}
#header > div a {font-weight:bold;font-size:13px;color:#666;text-decoration:none;padding:3px 8px;border:1px solid #ccc;border-radius:5px;}
#header > div a:hover {color:#866eac;border-color:#866eac;}
#nav {display:table;width:100%;background-color:#866eac;}
#nav a {display:table-cell;width:25%;font-weight:bold;font-size:14px;color:#fff;text-align:center;padding:12px 0;border-right:1px solid #c3b3dd;}
#nav a:last-child {border-right:none;}
#nav a:hover {background-color:#5f4589;}
#container {width:100%;padding:15px;}
#container h2 {font-weight:bold;font-size:21px;color:#222;}
#footer {width:100%;font-size:12px;color:#666;text-align:center;margin-top:50px;}
#footer span {color:#4367b7;}



.tb-function {width:100%;padding:5px 0;margin-top:20px;overflow:hidden;}
.tb-function > div {float:left;}
.tb-function > div:nth-child(2) {float:right;}
.tb-function .tb-search select {width:90px;height:28px;vertical-align:middle;border:1px solid #bbb;}
.tb-function .tb-search input {width:240px;height:28px;line-height:28px\9;vertical-align:middle;padding:0 5px;border:1px solid #bbb;}
.tb-function .tb-search button {height:28px;line-height:28px;font-weight:bold;font-size:13px;color:#fff;text-decoration:none;vertical-align:middle;background-color:#625893;padding:0 15px;}
.tb-function .tb-search button:hover {background-color:#4b456b;}
.tb-function .tb-confirm button {height:28px;font-weight:bold;font-size:13px;color:#666;text-decoration:none;vertical-align:middle;border:1px solid #ccc;padding:0 15px;}
.tb-function .tb-confirm button:hover {background-color:#fff;}

.tb-user-list {width:100%;margin-top:10px;border-top:1px solid #4a4a4a;}
.tb-user-list thead th {height:40px;border-bottom:1px solid #aaa;}
.tb-user-list tbody td {height:50px;text-align:center;border-bottom:1px solid #ddd;}
.tb-user-list tbody tr:hover {background-color:#f9f9f9;}
